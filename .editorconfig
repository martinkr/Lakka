# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root=true

[*]
end_of_line=lf
charset=utf-8
trim_trailing_whitespace=true
insert_final_newline=true


# Tabs in CSS, LESS, SASS, HTML
[*.{js,html,css,scss,sass,less,myth}]
indent_style=tab
indent_size = 4

# Spaces in JSON, .*rc, yml
[*.{json,yml}]
indent_style=space
indent_size = 2

[.*rc]
indent_style=space
indent_size = 2

[*.md]
insert_final_newline=false
